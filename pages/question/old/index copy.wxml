<nav nav-type="search" />
<view class="home-container">
  <view class="home-content">
    <!-- 添加加载状态 -->
    <view wx:if="{{loading}}" class="loading-container">
      <t-loading size="48rpx" text="加载中..." />
    </view>
    
    <t-tabs wx:else value="{{currentPrimary}}" bind:change="onTabChange">
      <block wx:for="{{primaryCategories}}" wx:key="id">
        <t-tab-panel label="{{item.name}}" value="{{item.id}}">
          <t-pull-down-refresh value="{{enable}}" bind:refresh="onRefresh" loadingTexts="{{['下拉刷新', '松手刷新', '正在刷新', '刷新完成']}}">
            <view class="tab-content">
              <!-- 一级分类横向导航 -->
              <!-- <view class="primary-categories">
                <scroll-view class="categories-scroll" scroll-x="true" scroll-left="{{scrollLeft}}">
                  <view class="categories-wrapper">
                    <block wx:for="{{primaryCategories}}" wx:key="id">
                      <view 
                        class="category-item {{currentPrimary === item.id ? 'active' : ''}}"
                        bindtap="switchPrimaryCategory"
                        data-id="{{item.id}}"
                      >
                        <text class="category-name">{{item.name}}</text>
                        <text class="category-count">{{item.count}}</text>
                      </view>
                    </block>
                  </view>
                </scroll-view>
              </view> -->
              
              <!-- 主体内容区域 -->
              <view class="main-content">
                <!-- 侧边二级导航 -->
                <view class="sidebar {{isSidebarCollapsed ? 'collapsed' : ''}}">
                  <view class="sidebar-header">
                    <t-icon 
                      name="{{isSidebarCollapsed ? 'chevron-right' : 'chevron-left'}}" 
                      bindtap="toggleSidebar"
                      class="collapse-icon"
                    ></t-icon>
                    <text class="sidebar-title" wx:if="{{!isSidebarCollapsed}}">分类</text>
                  </view>
                  
                  <view class="sidebar-content" wx:if="{{!isSidebarCollapsed}}">
                    <block wx:for="{{secondaryCategories}}" wx:key="id">
                      <view 
                        class="secondary-item {{currentSecondary === item.id ? 'active' : ''}}"
                        bindtap="switchSecondaryCategory"
                        data-id="{{item.id}}"
                      >
                        <t-icon name="{{item.icon}}" class="item-icon"></t-icon>
                        <text class="item-name">{{item.name}}</text>
                        <text class="item-count">{{item.count}}</text>
                      </view>
                    </block>
                    
                    <!-- 二级分类为空时的提示 -->
                    <view wx:if="{{secondaryCategories.length === 0}}" class="empty-categories">
                      <text class="empty-text">暂无分类数据</text>
                    </view>
                  </view>
                </view>

                <!-- 内容展示区域 -->
                <view class="content-area {{isSidebarCollapsed ? 'full-width' : ''}}">
                  <!-- 图片展示区域 -->
                  <view wx:if="{{currentQuestions.length > 0}}" class="images-grid">
                    <block wx:for="{{currentQuestions}}" wx:key="id">
                      <view class="image-card">
                        <image 
                          src="{{item.url}}" 
                          mode="aspectFill"
                          class="card-image"
                          bindtap="previewImage"
                          data-url="{{item.url}}"
                        ></image>
                        <view class="card-info">
                          <text class="image-title">{{item.name}}</text>
                          <text class="image-desc">{{item.description}}</text>
                        </view>
                      </view>
                    </block>
                  </view>
                  
                  <!-- 图片为空时的提示 -->
                  <view wx:else class="empty-content">
                    <t-icon name="image" size="120rpx" color="#ccc"></t-icon>
                    <text class="empty-text">暂无内容</text>
                  </view>
                </view>
              </view>
            </view>
          </t-pull-down-refresh>
        </t-tab-panel>
      </block>
    </t-tabs>
  </view>
</view>

<view class="home-release">
  <t-button theme="primary" size="large" icon="add" shape="round" bindtap="goRelease">
    发布
  </t-button>
</view>
<t-message id="t-message" />