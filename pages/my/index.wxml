<!-- 自定义弹窗组件 -->
<view wx:if="{{showImagePopup}}" class="custom-modal">
  <view class="modal-mask" bindtap="hideImagePopup"></view>
  <view class="modal-content" catchtouchmove="preventTouchMove">
    <view class="modal-header">
      <text class="modal-title">联系客服</text>
      <view class="close-btn" bindtap="hideImagePopup">×</view>
    </view>
    <view class="modal-body">
      <!-- 添加 show-menu-by-longpress 属性支持长按菜单 -->
      <image 
        src="{{popupImageUrl}}" 
        mode="aspectFit" 
        class="contact-image"
        show-menu-by-longpress="{{true}}"
        binderror="onImageError"
        bindlongpress="onImageLongPress"
      />
      <text class="contact-tip">长按识别二维码或保存图片</text>
      <text class="contact-desc">扫描二维码添加客服微信</text>
    </view>
    <view class="modal-footer">
      <button class="save-btn" bindtap="saveImageToPhotos">保存到相册</button>
    </view>
  </view>
</view>